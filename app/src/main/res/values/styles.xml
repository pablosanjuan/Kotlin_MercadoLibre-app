<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
    /**
    * Pablo Sanjuan
    * Haciendo uso de la documentacion de MATERIAL DESIGN y Google
    * defino los parametros a usar en los styles que maneja la App
    *
    * En esta clase defino los estilos de los componentes
    */

    -->

    <!--    INPUT BOX   -->
    <style name="TextInputEditText_SearchLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="boxCornerRadiusTopStart">@dimen/spacing_medium_element</item>
        <item name="boxCornerRadiusTopEnd">@dimen/spacing_medium_element</item>
        <item name="boxCornerRadiusBottomStart">@dimen/spacing_medium_element</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/spacing_medium_element</item>
        <item name="fontFamily">@font/imprima</item>
        <item name="boxStrokeColor">@null</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="android:layout_marginTop">@dimen/spacing_small_element</item>
    </style>

    <style name="TextInputEditText_SearchInput">
        <item name="android:textColor">?colorOnSecondary</item>
        <item name="android:textColorHint">?colorPrimary</item>
        <item name="android:backgroundTint">?colorSecondary</item>
        <item name="android:singleLine">true</item>
        <item name="fontFamily">@font/imprima</item>
        <item name="android:textAppearance">?textAppearanceBody1</item>
        <item name="android:paddingStart">@dimen/spacing_extra_small_element</item>
        <item name="android:paddingEnd">@dimen/spacing_extra_small_element</item>
        <item name="android:shadowColor">@color/grey_300</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--    BOTTOM NAVIGATION   -->
    <style name="NavTextActive">
        <item name="android:textSize">@dimen/nav_text_active</item>
        <item name="fontFamily">@font/imprima</item>
    </style>

    <style name="NavTextInactive">
        <item name="android:textSize">@dimen/nav_text_inactive</item>
        <item name="fontFamily">@font/imprima</item>
    </style>

    <!--    BUTTON   -->
    <style name="CustomButton" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">@dimen/spacing_small_element</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/imprima</item>
        <item name="android:textAppearance">?textAppearanceButton</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/spacing_small_element</item>
        <item name="android:padding">@dimen/spacing_extra_small_element</item>
    </style>
</resources>
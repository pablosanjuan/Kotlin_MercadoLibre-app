<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ListadoProductos" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_700</item>
        <item name="colorPrimaryVariant">@color/grey_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Surface brand color. -->
        <item name="colorSurface">@color/grey_100</item>
        <item name="colorOnSurface">@color/black_900</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Error brand color. -->
        <item name="colorError">@color/red_600</item>
        <item name="colorOnError">@color/grey_200</item>
        <!-- Customize your theme here. -->
        <item name="android:statusBarColor">?colorPrimary</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="android:navigationBarColor" tools:ignore="NewApi">?colorSurface</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">?colorSurface</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>
        <item name="android:windowContentTransitions">true</item>
    </style>
</resources>
    <!-- Base application theme. -->
    <style name="CustomPabloSj.Default">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/grey_600</item>
        <item name="colorPrimaryVariant">@color/lime_50</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Surface brand color. -->
        <item name="colorSurface">@color/grey_900</item>
        <item name="colorOnSurface">@color/white_50</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/grey_A100</item>
        <item name="colorSecondaryVariant">@color/black_900</item>
        <item name="colorOnSecondary">@color/white_50</item>
        <!-- Error brand color. -->
        <item name="colorError">@color/red_600</item>
        <item name="colorOnError">@color/grey_200</item>
        <!-- Customize your theme here. -->
        <item name="android:statusBarColor">?colorPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
</resources>